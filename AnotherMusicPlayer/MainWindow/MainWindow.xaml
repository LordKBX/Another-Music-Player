<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Collections="clr-namespace:System.Collections;assembly=System.Collections.NonGeneric"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:local="clr-namespace:AnotherMusicPlayer"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dd="urn:gong-wpf-dragdrop"
        x:Class="AnotherMusicPlayer.MainWindow" Name="win1" mc:Ignorable="d" Title="Another Music Player"
    Height="400" MinHeight="450" Width="550" MinWidth="500" WindowStyle="None" 
    AllowsTransparency="True" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AnotherMusicPlayer;component/Styles/Red.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AnotherMusicPlayer;component/Traductions/en.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskBarItemInfo1" Description="Another Media Player" >
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfoCollection>
                    <ThumbButtonInfo DismissWhenClicked="False" x:Name="PreviewCtrlPrev" Description="PreviousTrack" RenderOptions.BitmapScalingMode="HighQuality" />
                    <ThumbButtonInfo DismissWhenClicked="False" x:Name="PreviewCtrlPause" Description="Play" RenderOptions.BitmapScalingMode="HighQuality" />
                    <ThumbButtonInfo DismissWhenClicked="False" x:Name="PreviewCtrlNext" Description="NextTrack" RenderOptions.BitmapScalingMode="HighQuality" />
                </ThumbButtonInfoCollection>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>

    <materialDesign:DialogHost CloseOnClickAway="False" x:Name="dialog1" IsOpen="False">
        <materialDesign:DialogHost.DialogContent>
            <Grid Margin="20" MinWidth="200px" Height="50px" MaxHeight="50px">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50px"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="dialog1Image" Source="/AnotherMusicPlayer;component/icons/loadingx50.png" Grid.Column="0" MaxHeight="50px" MaxWidth="50px" Height="35px" Width="35px">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="0"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding InLoading}" Value="Running">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(LayoutTransform).(RotateTransform.Angle)"
                                                     From="0"
                                                     To="360"
                                                     Duration="0:0:2"
                                                     RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard FillBehavior="Stop">
                                                <DoubleAnimation Storyboard.TargetProperty="(LayoutTransform).(RotateTransform.Angle)"
                                                     To="90"
                                                     Duration="0:0:0" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>

                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <TextBlock x:Name="dialog1Text" Text="Loading" Grid.Column="1" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </materialDesign:DialogHost.DialogContent>

        <Grid Style="{DynamicResource CustomWindowBackgroundStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="27px"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="40px"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="49px"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{DynamicResource TopBarBorder}">
                <Grid x:Name="TopBar">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Style="{DynamicResource TopBarBtnWidth}"/>
                        <ColumnDefinition Style="{DynamicResource TopBarBtnWidth}"/>
                        <ColumnDefinition Style="{DynamicResource TopBarBtnWidth}"/>
                    </Grid.ColumnDefinitions>
                    <AccessText Grid.Column="0" Text="Another Media Player" Style="{DynamicResource TopBarTitle}"/>
                    <Button x:Name="BtnMinimize" Grid.Column="1" Cursor="Hand" Style="{DynamicResource TopBarBtnMinimize}" />
                    <Button x:Name="BtnMaximize" Grid.Column="2" Cursor="Hand" Style="{DynamicResource TopBarBtnMaximize}" />
                    <Button x:Name="BtnClose" Grid.Column="3" Cursor="Hand" Style="{DynamicResource TopBarBtnClose}" />
                </Grid>
            </Border>
            <TabControl Grid.Row="1" Grid.Column="0" x:Name="TabControler" BorderBrush="{x:Null}" Background="{x:Null}" 
                         Margin="0,0,0,0" Padding="0,0,0,0" materialDesign:NavigationRailAssist.ShowSelectionBackground="True" 
                         SnapsToDevicePixels="True" Style="{DynamicResource TabControlStyle}"
                        TabStripPlacement="Top" HorizontalAlignment="Stretch">
                <TabItem Style="{DynamicResource TabItemStyle}" x:Name="Tab1">
                    <TabItem.Header>
                        <Border BorderBrush="{Binding ElementName=Tab1, Path=BorderBrush}" 
                                BorderThickness="{Binding ElementName=Tab1, Path=BorderThickness}"
                                Background="{Binding ElementName=Tab1, Path=Background}"
                                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
                                Width="{Binding ElementName=Tab1, Path=Width}"
                                Height="{Binding ElementName=Tab1, Path=Height}">
                            <local:AlignablePanel HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Width="24" Height="24" Kind="Music" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Foreground="{Binding ElementName=Tab1, Path=Foreground}"/>
                                    <AccessText HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Text="{DynamicResource TabPlaylist}" Margin="3,0,0,0"
                                    Foreground="{Binding ElementName=Tab1, Path=Foreground}"/>
                                </StackPanel>
                            </local:AlignablePanel>
                        </Border>
                    </TabItem.Header>
                    <Grid x:Name="Grid1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150px"/>
                            <ColumnDefinition Width="100*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource PlayBackListViewBorderStyle}" BorderThickness="0,0,1,0" Margin="0,0,0,0">
                            <Grid x:Name="Grid2" Background="{DynamicResource BackgroundColor}" Panel.ZIndex="99999">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="23*"/>
                                    <ColumnDefinition Width="52*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="150px"/>
                                    <RowDefinition Height="100*"/>
                                </Grid.RowDefinitions>

                                <Border BorderThickness="0,1,0,1" Style="{DynamicResource PlayBackListViewBorderStyle}" Grid.ColumnSpan="2">
                                    <TextBlock Style="{DynamicResource PlayBackPanelInfoImageBlock}">
                                        <Image x:Name="FileCover" Grid.Row="0" Width="150" Height="150" 
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </TextBlock>
                                </Border>
                                <Border BorderThickness="0,0,0,1" 
                                        Style="{DynamicResource PlayBackListViewBorderStyle}" Grid.Row="1" 
                                        Grid.ColumnSpan="2">
                                    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                                  ScrollViewer.CanContentScroll="True">
                                        <TextBlock x:Name="LeftPannelMediaInfo" 
                                                   Foreground="{DynamicResource ForegroundColor}">
                                            <TextBlock Text="{DynamicResource Title2}" x:Name="PlayItemNameTitle" 
                                                       Margin="3,3,0,0"/> 
                                            <LineBreak></LineBreak>
                                            <AccessText x:Name="PlayItemNameValue" Margin="10,0,0,0" 
                                                        Foreground="{DynamicResource ForegroundAltColor}" 
                                                        TextWrapping="WrapWithOverflow" Text="Test"/>
                                            <LineBreak></LineBreak>
                                            <TextBlock Text="{DynamicResource Album2}" x:Name="PlayItemAlbumTitle" Margin="3,0,0,0"/> <LineBreak></LineBreak>
                                            <AccessText   x:Name="PlayItemAlbumValue" Text="" Margin="10,0,0,0" Foreground="{DynamicResource ForegroundAltColor}" TextWrapping="WrapWithOverflow"/>
                                            <LineBreak></LineBreak>
                                            <TextBlock Text="{DynamicResource Artist2}" x:Name="PlayItemArtistsTitle" Margin="3,0,0,0"/> <LineBreak></LineBreak>
                                            <AccessText   x:Name="PlayItemArtistsValue" Text="" Margin="10,0,0,0" Foreground="{DynamicResource ForegroundAltColor}" TextWrapping="WrapWithOverflow"/>
                                            <LineBreak></LineBreak>
                                            <TextBlock Visibility="Collapsed" Text="{DynamicResource duration2}" x:Name="PlayItemdurationTitle" Margin="3,0,0,0"/> <LineBreak></LineBreak>
                                            <TextBlock Visibility="Collapsed"  x:Name="PlayItemDurationValue" Text="" Margin="10,0,0,0" Foreground="{DynamicResource ForegroundAltColor}"/>
                                        </TextBlock>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>
                        <Grid x:Name="Grid3" Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="29*"/>
                                <ColumnDefinition Width="323*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="100*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Style="{DynamicResource PlayBackListViewBorderStyle}" BorderThickness="0,1,1,0" Margin="0,0,-1,0" Grid.ColumnSpan="2">
                                <TextBlock Foreground="{DynamicResource ForegroundColor}" Padding="5,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Left">
                                    <TextBlock>Pistes à venir:</TextBlock><Run Text=" "/>
                                    <TextBlock x:Name="Label_PlayListDisplayedNBTracks" /><TextBlock>, Total:</TextBlock><Run Text=" "/>
                                    <TextBlock x:Name="Label_PlayListNBTracks" /><TextBlock>, Position:</TextBlock>
                                    <TextBlock x:Name="Label_PlayListIndex" />
                                </TextBlock>
                            </Border>
                            <ListView Grid.Row="1" x:Name="PlayListView" SelectionMode="Extended" IsTextSearchEnabled="False"
                                      AutomationProperties.IsColumnHeader="True" ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                                      ListView.ItemContainerStyle="{DynamicResource ResourceKey=MediaItem}" AlternationCount="2" HorizontalContentAlignment="Left" 
                                      Padding="-1,-1,0,0" VerticalContentAlignment="Center" Style="{DynamicResource PlayBackListViewStyle}"
                                      FlowDirection="LeftToRight" Margin="0,0,-1,0" Grid.ColumnSpan="2" BorderThickness="0,0,1,1">
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridViewColumn x:Name="PlayListViewC1" Width="25" Header="" 
                                                DisplayMemberBinding="{Binding Selected}" HeaderContainerStyle="{DynamicResource ListViewHeaderStyle0}"/>
                                        <GridViewColumn x:Name="PlayListViewC2" Header="{DynamicResource Title}" HeaderContainerStyle="{DynamicResource ListViewHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <AccessText Text="{Binding Name}" Style="{DynamicResource ListViewColumnItemAccessText}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn x:Name="PlayListViewC5" Width="80" Header="{DynamicResource Duration}" DisplayMemberBinding="{Binding DurationS}" HeaderContainerStyle="{DynamicResource ListViewHeaderStyle}"/>
                                        <GridViewColumn x:Name="PlayListViewC4" Header="{DynamicResource Artist}" HeaderContainerStyle="{DynamicResource ListViewHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <AccessText Text="{Binding Performers}" Style="{DynamicResource ListViewColumnItemAccessText}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn x:Name="PlayListViewC3" Header="{DynamicResource Album}" HeaderContainerStyle="{DynamicResource ListViewHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <AccessText Text="{Binding Album}" Style="{DynamicResource ListViewColumnItemAccessText}" Margin="0,0,20,0"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle}" x:Name="Tab2">
                    <TabItem.Header>
                        <Border BorderBrush="{Binding ElementName=Tab2, Path=BorderBrush}" 
                                BorderThickness="{Binding ElementName=Tab2, Path=BorderThickness}"
                                Background="{Binding ElementName=Tab2, Path=Background}"
                                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
                                Width="{Binding ElementName=Tab2, Path=Width}"
                                Height="{Binding ElementName=Tab2, Path=Height}">
                            <local:AlignablePanel HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Width="24" Height="24" Kind="FolderMusic" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Foreground="{Binding ElementName=Tab2, Path=Foreground}"/>
                                    <AccessText HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Text="{DynamicResource TabLibrary}" Margin="3,0,0,0"
                                    Foreground="{Binding ElementName=Tab2, Path=Foreground}"/>
                                </StackPanel>
                            </local:AlignablePanel>
                        </Border>
                    </TabItem.Header>
                    <Grid Margin="0,0,4,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="303*"/>
                            <ColumnDefinition Width="194*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="100*"/>
                        </Grid.RowDefinitions>

                        <Border BorderThickness="0,1,1,0" BorderBrush="{DynamicResource BorderColor}" Grid.ColumnSpan="2">
                            <Viewbox HorizontalAlignment="Left" VerticalAlignment="Stretch" FlowDirection="LeftToRight">
                                <WrapPanel x:Name="LibibraryNavigationPathContener" Style="{DynamicResource LibibraryNavigationPathContenerStyle}">
                                    <TextBlock Style="{DynamicResource LibibraryNavigationPathItem}" TextDecorations="Underline" Text="Home"/>
                                </WrapPanel>
                            </Viewbox>
                        </Border>
                        <Border BorderThickness="0,1,1,0" BorderBrush="{DynamicResource BorderColor}" Grid.Row="1" x:Name="LibraryFiltersGrid" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="57"/>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Filtre" VerticalAlignment="Center" Margin="5,0,0,0" Grid.ColumnSpan="2"/>
                                <ComboBox Grid.Column="2" x:Name="LibraryFiltersMode" Margin="0,-1,0,-1">
                                    <ComboBoxItem x:Name="LibraryFiltersMode_none" Tag="" Content="Aucun" Selector.IsSelected="True"/>
                                    <ComboBoxItem x:Name="LibraryFiltersMode_name" Tag="Name" Content="Nom"/>
                                    <ComboBoxItem x:Name="LibraryFiltersMode_artist" Tag="Artist" Content="Artist"/>
                                    <ComboBoxItem x:Name="LibraryFiltersMode_album" Tag="Album" Content="Album"/>
                                    <ComboBoxItem x:Name="LibraryFiltersMode_genre" Tag="Genre" Content="Genre"/>
                                </ComboBox>
                                <ComboBox Grid.Column="3" x:Name="LibraryFiltersGenreList" Visibility="Hidden" Margin="0,-1,0,-1"></ComboBox>
                                <TextBox Grid.Column="4" x:Name="LibraryFiltersGenreSearchBox" Visibility="Hidden" Cursor="IBeam"/>
                                <TextBox Grid.Column="3" Grid.ColumnSpan="2" x:Name="LibraryFiltersSearchBox" Style="{DynamicResource LibibraryNavigationFilterInput}" Visibility="Collapsed"/>
                                <Grid Grid.Column="5" x:Name="LibraryFiltersPaginationBlock" HorizontalAlignment="Left" Visibility="Hidden" Margin="38,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="20" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" x:Name="LibraryFiltersPaginationPrevious" FontFamily="Segoe UI Symbol" Content="◀"/>
                                    <TextBlock Grid.Column="1" x:Name="LibraryFiltersPaginationDisplay" Text="1/x" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <Button Grid.Column="2" x:Name="LibraryFiltersPaginationNext" FontFamily="Segoe UI Symbol" Content="▶"/>
                                </Grid>
                            </Grid>
                        </Border>
                        <Border x:Name="LibibraryNavigationContentB" Grid.Row="2" BorderThickness="0,1,1,1" BorderBrush="{DynamicResource BorderColor}" Visibility="Visible" Grid.ColumnSpan="2">
                            <ScrollViewer x:Name="LibibraryNavigationContentScroll" VerticalScrollBarVisibility="Auto" 
                                          HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                <local:AlignablePanel x:Name="LibibraryNavigationContent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" />
                            </ScrollViewer>
                        </Border>
                        <Border x:Name="LibibraryNavigationContent2B" Grid.Row="2" BorderThickness="0,1,1,1" BorderBrush="{DynamicResource BorderColor}" Margin="0" Visibility="Collapsed" Grid.ColumnSpan="2">
                            <ScrollViewer x:Name="LibibraryNavigationContentScroll2" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="LibibraryNavigationContent2">
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="2" Margin="36,13,0,0" VerticalAlignment="Top" Width="63"/>
                    </Grid>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle}" x:Name="Tab3">
                    <TabItem.Header>
                        <Border BorderBrush="{Binding ElementName=Tab3, Path=BorderBrush}" 
                                BorderThickness="{Binding ElementName=Tab3, Path=BorderThickness}"
                                Background="{Binding ElementName=Tab3, Path=Background}"
                                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
                                Width="{Binding ElementName=Tab3, Path=Width}"
                                Height="{Binding ElementName=Tab3, Path=Height}">
                            <local:AlignablePanel HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Width="24" Height="24" Kind="PlaylistMusic" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Foreground="{Binding ElementName=Tab3, Path=Foreground}"/>
                                    <AccessText HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Text="{DynamicResource TabRecordedPlaylists}" Margin="3,0,0,0"
                                    Foreground="{Binding ElementName=Tab3, Path=Foreground}"/>
                                </StackPanel>
                            </local:AlignablePanel>
                        </Border>
                    </TabItem.Header>
                    <Grid Margin="-2,0,4,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="100*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="100*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderColor}" Margin="0" BorderThickness="0,1,0,1">
                                <TextBlock Text="{DynamicResource PlayListsHeaderCol1}" Foreground="White" VerticalAlignment="Center" Height="15" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <TreeView x:Name="PlaylistsTree"  Grid.Row="1" Margin="1,0,0,2" 
                                      Style="{DynamicResource PlaylistsTreeStyle}" BorderThickness="0,0,0,1"
                                      ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderBrush="{DynamicResource BorderColor}"
                                      ScrollViewer.CanContentScroll="False" ContextMenuService.IsEnabled="True">
                                <TreeViewItem x:Name="PlaylistsTreeAuto" Header="{DynamicResource PlayListsAuto}" Style="{DynamicResource PlaylistsTreeStyleItem}">
                                    <TreeViewItem Header="BB" Style="{DynamicResource PlaylistsTreeStyleItem}"></TreeViewItem>
                                </TreeViewItem>
                                <TreeViewItem Header="CC" Style="{DynamicResource PlaylistsTreeStyleItem}">
                                </TreeViewItem>
                            </TreeView>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,0,0,2">
                            <ListView x:Name="PlaylistsContents" SelectionMode="Extended" IsTextSearchEnabled="False" 
                                      AutomationProperties.IsColumnHeader="True" 
                                      ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Visible"
                                      Style="{DynamicResource PlaylistsContentsStyle}"
                                      ListView.ItemContainerStyle="{DynamicResource ResourceKey=PlaylistsContentsMediaItem}" 
                                      AlternationCount="2" HorizontalContentAlignment="Left" 
                                      Padding="0,-1,0,0" 
                                      VerticalContentAlignment="Center" FlowDirection="LeftToRight" 
                                      Margin="0,0,0,0" Grid.ColumnSpan="3"
                                      dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True">
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridViewColumn x:Name="PlaylistsContentsC0" Header="{DynamicResource Count}" 
                                                        HeaderContainerStyle="{DynamicResource PlaylistsContentsHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <AccessText Text="{Binding PlayCount}" 
                                                                Style="{DynamicResource ListViewColumnItemAccessText}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn x:Name="PlaylistsContentsC1" Header="{DynamicResource Title}" 
                                                        HeaderContainerStyle="{DynamicResource PlaylistsContentsHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <AccessText Text="{Binding Name}" 
                                                                Style="{DynamicResource ListViewColumnItemAccessText}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn x:Name="PlaylistsContentsC2" 
                                                        Header="{DynamicResource Artist}" 
                                                        HeaderContainerStyle="{DynamicResource PlaylistsContentsHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <AccessText Text="{Binding Performers}" 
                                                                Style="{DynamicResource ListViewColumnItemAccessText}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn x:Name="PlaylistsContentsC3" 
                                                        Header="{DynamicResource Album}" 
                                                        HeaderContainerStyle="{DynamicResource PlaylistsContentsHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <AccessText Text="{Binding Album}" 
                                                                Style="{DynamicResource ListViewColumnItemAccessText}" 
                                                                Margin="0,0,20,0"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn x:Name="PlaylistsContentsC4" Width="80" 
                                                        Header="{DynamicResource Duration}" 
                                                        DisplayMemberBinding="{Binding DurationS}" 
                                                        HeaderContainerStyle="{DynamicResource PlaylistsContentsHeaderStyle}"/>
                                        <GridViewColumn x:Name="PlaylistsContentsC5" 
                                                        Header="{DynamicResource Rating}" Width="130"
                                                        HeaderContainerStyle="{DynamicResource PlaylistsContentsHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <local:Rating Zoom="0.7" StarBackgroundColor="Gray" 
                                                        StarForegroundColor="White" Rate="{Binding Rating}" 
                                                        RateChanged="RatingRateChanged" Tag="{Binding Path}" 
                                                                  IsReadOnly="True"/>
                                                    <!--<materialDesign:RatingBar 
                                                        Value="{Binding Rating}" 
                                                        IsReadOnly="True" Foreground="White" Opacity="1"/>-->
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle}" x:Name="Tab4">
                    <TabItem.Header>
                        <Border BorderBrush="{Binding ElementName=Tab4, Path=BorderBrush}" 
                                BorderThickness="{Binding ElementName=Tab4, Path=BorderThickness}"
                                Background="{Binding ElementName=Tab4, Path=Background}"
                                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
                                Width="{Binding ElementName=Tab4, Path=Width}"
                                Height="{Binding ElementName=Tab4, Path=Height}">
                            <local:AlignablePanel HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Width="24" Height="24" Kind="Cog" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Foreground="{Binding ElementName=Tab4, Path=Foreground}"/>
                                    <AccessText HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Text="{DynamicResource TabParams}" Margin="3,0,0,0"
                                    Foreground="{Binding ElementName=Tab4, Path=Foreground}"/>
                                </StackPanel>
                            </local:AlignablePanel>
                        </Border>
                    </TabItem.Header>
                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource TabItemStyleSettings}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <WrapPanel HorizontalAlignment="Center">
                                <GroupBox Header="{DynamicResource ParamsLanguageLabel}">
                                    <ComboBox x:Name="ParamsLanguageVals" 
                                    MinWidth="200" Height="30">
                                        <ComboBoxItem x:Name="LG_en" Tag="en-US" Content="{DynamicResource ParamsLanguageVals_EN}" IsSelected="False"/>
                                        <ComboBoxItem x:Name="LG_fr" Tag="fr-FR" Content="{DynamicResource ParamsLanguageVals_FR}" IsSelected="True"/>
                                    </ComboBox>
                                </GroupBox>

                                <GroupBox Header="{DynamicResource ParamsStyleLabel}">
                                    <ComboBox x:Name="ParamsStyleVals" 
                                        MinWidth="200" Height="30">
                                    </ComboBox>
                                </GroupBox>

                                <GroupBox Header="{DynamicResource ParamsMemoryUsageLabel}">
                                    <ComboBox x:Name="ParamsMemoryUsage" 
                                    MinWidth="200" Height="30">
                                        <ComboBoxItem x:Name="MU0" Tag="0" Content="{DynamicResource ParamsMemoryUsage0}" IsSelected="False"/>
                                        <ComboBoxItem x:Name="MU1" Tag="1" Content="{DynamicResource ParamsMemoryUsage1}" IsSelected="True"/>
                                    </ComboBox>
                                </GroupBox>

                                <GroupBox Header="{DynamicResource ParamsLibFolderLabel}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="ParamsLibFolderTextBox" IsReadOnly="True"
                                             Style="{DynamicResource TabItemStyleSettingsTextBox}"/>
                                        <Button x:Name="ParamsLibFolderBtn" 
