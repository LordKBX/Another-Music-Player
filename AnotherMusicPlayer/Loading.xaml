<Window x:Class="AnotherMusicPlayer.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnotherMusicPlayer"
        mc:Ignorable="d"
        Title="Loading" Height="100" Width="300">
    <Grid Background="Yellow" VerticalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70px"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Image Source="icons/pause.png" Grid.Column="0"></Image>
        <AccessText HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" FontSize="24" FontFamily="Arial Black">Loading...</AccessText>
    </Grid>
</Window>
